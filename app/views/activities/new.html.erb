<%= form_for @activity do |f| %>
  <div class='form-group'>
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :club_id %>
    <%= f.select("club_id", Club.all.collect {|club| [club.name, club.id] }, {include_blank: false}) %>
  </div>

  <%= f.submit 'Submit', class: 'btn btn-success' %>

<% end %>

<%= @activity.inspect %>
