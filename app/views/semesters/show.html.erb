<h1><strong>Semester Performance</strong> | <%= @semester.session %></h1>
<%= render 'shared/messages' %><br/>
<h4 class="custom-underline">Club Listing</h4>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Club Name</th>
      <th>Registered Members</th>
      <th>Total Activities</th>
      <th>Total Hours</th>
      <th>Activity Completed</th>
      <th>Attendance Rate( % )</th>
      <!-- <th>Activity Cancelled</th> -->
    </tr>
  </thead>
  <tbody>
    <% @clubs.each do |club| %>
      <tr>
        <td><%= club.name.titleize %></td>
        <td><%= club.members.count %></td>
        <td><%= club.activities.count %></td>
        <td><%= club.activities.map(&:no_of_hours).compact.sum %></td>
        <td><%= club.activities.completed.count %></td>
        <td><%= @semester.average_attendance(club.activities) %></td>
        <!-- <td><%#= club.activities.cancelled.count %></td> -->
      </tr>
  	  <% end %>
  </tbody>
</table>