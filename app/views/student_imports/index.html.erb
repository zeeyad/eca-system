<h1><strong>Student Import</strong></h1>

<% if !@student_import.errors.any? %>
  <%= render 'shared/messages' %>
<% end %>

<%= form_for @student_import do |f| %>

  <%= f.hidden_field :user_id, :value => 1 %>

  <% if @student_import.errors.any? %>
    <div class="row">
      <div class="col-md-12 ">
        <div class="alert alert-danger">
            <h3 class="card-title">
              <a href="#" class="close" data-dismiss="alert">Ã—</a>
              Check Errors in the Following Row
            </h3>
            <div class="card-block">
              <ul>
                <% @student_import.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        </div>
      </div>
    </div>
  <% end %>


<div class="input-group mb-3">
  <div class="custom-file">
    <%= f.label :file, class: 'custom-file-label', for: 'inputGroupFile02' %>
    <%= f.file_field :file, class: 'custom-file-label' %>

  </div>
  <div class="col-md-4 offset-md-5 buttons">
    <%= f.submit "Import", class: "input-group-text" %>
  </div>
</div>
<% end %>



