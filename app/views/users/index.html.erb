<h1><strong>Users</strong></h1>
<div><%= link_to 'Create a User', new_user_path, class: 'btn btn-outline-success mb-3' %></div>

<table class="table table-bordered table-striped table-responsive-md">
  <thead>
   <tr>
     <td>Email</td>
     <td>Name</td>
     <td>Type</td>
     <td>Last Sign In</td>
     <td>Action</td>
   </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= user.name %></td>
      <td><%= user.user_type(user.type) %></td>
      <td style="width: 20%;"><%= user.last_sign_in_at.strftime("%d %B %Y at %I:%M%p") if user.last_sign_in_at  %></td>
      <td><%= link_to "", user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete this user and all his activities" }, class: 'fa fa-trash btn btn-outline-danger' %></td>
    </tr>
    <% end %>
  </tbody>
</table>