<h1>Create User</h1>
<div><%= link_to "Back to Users", users_path, class: 'btn btn-outline-dark' %></div>

<%= render 'shared/errors', obj: @user %>
<br/>
<%= form_for @user do |f| %>

  <div class="card card-body bg-light">

    <div class='form-group'>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', placeholder: "e.g. Ali Sabri" %>
    </div>

    <div class='form-group'>
      <%= f.label :username %>
      <%= f.text_field :username, class: 'form-control', placeholder: "e.g. AliSabri" %>
    </div>

    <div class='form-group'>
      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control', placeholder: "e.g. alisabri@ubd.edu.bn" %>
    </div>

    <div class='form-group'>
      <%= f.label :type %>
      <%= f.select(:type, [['Activity Office', 'ActivityOffice'], ['Sport Executive', 'SportExecutive'], ['Data Admin', 'DataAdmin'], ['Art Executive', 'ArtExecutive'], ['Spiritual Executive', 'SpiritualExecutive'], ['Spiritual Office', 'SpiritualOffice'] ]) %>
    </div>

  </div>

  <%= f.submit 'Create User', class: 'btn btn-success mt-3' %>


<% end %>